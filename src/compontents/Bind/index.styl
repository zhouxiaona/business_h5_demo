#Bind{
    width 100vw
    height 100vh
    background: rgba(0,0,0,.7)
    position fixed
    left 0
    top 0
    z-index: 11
    display: flex
    justify-content: center
    align-content: center
    align-items: center
    flex-wrap: wrap
    .BindBox{
        width 73.3vw
        height 85.6vw
        background: #fff
        border-radius: 1.6vw;
        .title{
            width 100%
            text-align center
            font-size 4.3vw
            color: #9673FF
            margin-top 5.5vw
            font-weight:bold;
            span{
                display: inline-block
                width 5.6vw
                height .8vw
                background:#9673FF;
                border-radius: .4vw;
                margin-top 1vw
            }
            }
        .submitBtn{
            width: 24.3vw;
            height: 8.4vw;
            border-radius: 2.7vw; 
            font-size: 4.3vw;
            color:#9673FF;
            line-height: 8.1vw;
            text-align center
            border: 1px solid #9673FF
            margin 12vw auto 0
            }
        .inputBox{
            width 57.5vw
            height 10vw
            margin 7.6vw auto 0
            display: flex
            justify-content: space-between
            align-content: center
            align-items: center
            .codeBtn{
                width 24.1vw
                height 10vw
                border-radius: 1.6vw;
                color: #9673FF
                font-size 3.7vw
                line-height 10vw
                text-align center
                }
            .codeInput{
                width 31.6vw
                height 10vw
                display: flex
                justify-content: space-between
                align-content: center
                align-items: center
                background:rgba(238,238,238,1);
                border-radius: 1.6vw;
                .inputFrom{
                    width 20vw
                    height 100%
                    font-size 3.7vw
                    color: #666666
                    line-height 10vw
                    margin-left 6.8vw
                    background: transparent;
                    text-align left
                    border: none
                    }
                }
            .input{
                width 100%
                height 100%
                display: flex
                justify-content: space-between
                align-content: center
                align-items: center
                background:rgba(238,238,238,1);
                border-radius: 1.6vw;
                .inputFrom{
                    width 35vw
                    height 100%
                    font-size 3.7vw
                    color: #666666
                    line-height 10vw
                    margin-left 6.8vw
                    background: transparent;
                    border: none
                    text-align left

                    }
                .phoneImg{
                    width 3.2vw
                    margin-right 3.2vw
                    }
                .nameImg{
                    width 4vw
                    margin-right 3.2vw

                    }
                }
            }
            .close {
                width:8.8vw;
                height:8.8vw;
                display: block
                margin: 17vw auto 0
            }

        }
    }